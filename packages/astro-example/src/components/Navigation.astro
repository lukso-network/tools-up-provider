---
const currentPath = Astro.url.pathname;
---
<div class="nav">
  <a href="/" class={`button-link ${currentPath === '/' ? 'disabled' : ''}`}>Vue Web3</a>
  <a href="/react-web3" class={`button-link ${currentPath === '/react-web3' ? 'disabled' : ''}`}>React Web3</a>
  <a href="/react-viem" class={`button-link ${currentPath === '/react-viem' ? 'disabled' : ''}`}>React Viem</a>
  <a href="/lit-viem" class={`button-link ${currentPath === '/lit-viem' ? 'disabled' : ''}`}>Lit Viem</a>
  <a href="/vue-ethers" class={`button-link ${currentPath === '/vue-ethers' ? 'disabled' : ''}`}>Vue Ethers</a>
  <a href="/svelte-web3" class={`button-link ${currentPath === '/svelte-web3' ? 'disabled' : ''}`}>Svelte Web3</a>
</div>
<style>
.nav {
  padding-top: 100px;
  display: flex;
  justify-content: center;
  gap: 10px;
  margin: 20px;
}
a.button-link {
  display: inline-block;
  padding: 2px 10px; /* Add padding for button size */
  border-radius: 5px; /* Rounded corners */
  background-color: #4caf50; /* Button color */
  color: white; /* Text color */
  text-decoration: none; /* Remove underline */
  font-weight: bold; /* Bold text for emphasis */
  font-size: 15px;
  text-align: center; /* Center the text */
  transition: background-color 0.3s ease; /* Smooth hover effect */
}

a.button-link:hover {
  background-color: #45a049; /* Darker color on hover */
}

a.button-link:active {
  background-color: #3e8e41; /* Even darker color on click */
}

a.button-link.disabled {
  background-color: #ccc;
  color: #666;
  pointer-events: none; /* Prevents clicking */
  cursor: default;
}
</style>
