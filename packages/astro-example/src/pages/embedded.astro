---
import EmbeddedVue from '../components/Embedded.vue';
import Navigation from '../components/Navigation.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
    <h2>Embedded</h2>
    <EmbeddedVue client:only="vue"/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
